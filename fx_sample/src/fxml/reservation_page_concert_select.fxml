			<font>
				<Font size="20.0" />
			</font>
		</RadioButton>
		<Button fx:id="btn_reservation" layoutX="516.0" layoutY="619.0"
			mnemonicParsing="false" onAction="#btn_reservation" prefHeight="81.0"
