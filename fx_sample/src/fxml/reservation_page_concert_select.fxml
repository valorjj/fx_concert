				<Image url="@../images/3.png" />
			</image>
		</ImageView>
		<RadioButton fx:id="opt_3" layoutX="1022.0"
			layoutY="538.0" mnemonicParsing="false" text="concert_3"
			toggleGroup="$concert_selection" AnchorPane.bottomAnchor="150.0"
